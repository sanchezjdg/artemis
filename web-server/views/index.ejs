<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Artemis</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/favicon.png" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
  
  <!-- Leaflet CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  
  <!-- Roboto font for Material Design -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">
</head>

<body>
  <!-- Controls overlay -->
  <div class="controls">
    <!-- Title -->
    <h2>Artemis</h2>
    <p class="mode-info">Select the mode you want to use:</p>
    
    <div class="button-group">
      <button id="real-time-btn" class="active">Real-Time</button>
      <button id="historical-btn">Historical</button>
    </div>
    
    <!-- Historical form -->
    <div id="historical-form">
      <div class="input-group">
        <label for="start-date">Start Date:</label>
        <input type="date" id="start-date">
      </div>
      
      <div class="input-group">
        <label for="start-time">Start Time:</label>
        <input type="time" id="start-time">
      </div>
      
      <div class="input-group">
        <label for="end-date">End Date:</label>
        <input type="date" id="end-date">
      </div>
      
      <div class="input-group">
        <label for="end-time">End Time:</label>
        <input type="time" id="end-time">
      </div>
      
      <button id="load-data" class="load-button">Load Route</button>
    </div>

    <!-- Loading state -->
    <div id="loading-state" style="display: none;">
      <h2>Artemis</h2>
      <p class="mode-info">Searching for data...</p>
      <p id="selected-interval"></p>
      <button id="back-to-historical" class="load-button">Go Back</button>
    </div>
  </div>
  
  <!-- Map Container -->
  <div id="map"></div>
  
  <!-- Socket.IO Client Library -->
  <script src="/socket.io/socket.io.js"></script>
  <!-- Leaflet JS -->
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <!-- Custom Client Script -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const realTimeBtn = document.getElementById("real-time-btn");
      const historicalBtn = document.getElementById("historical-btn");
      const historicalForm = document.getElementById("historical-form");
      const loadDataBtn = document.getElementById("load-data");
      const loadingState = document.getElementById("loading-state");
      const selectedInterval = document.getElementById("selected-interval");
      const backToHistoricalBtn = document.getElementById("back-to-historical");

      // Function to switch button states
      function setActiveButton(activeBtn, inactiveBtn) {
          activeBtn.classList.add("active");
          inactiveBtn.classList.remove("active");
      }

      // Switch to Historical Mode
      historicalBtn.addEventListener("click", function () {
          setActiveButton(historicalBtn, realTimeBtn);
          historicalForm.style.display = "block";
          loadingState.style.display = "none";
      });

      // Switch to Real-Time Mode
      realTimeBtn.addEventListener("click", function () {
          setActiveButton(realTimeBtn, historicalBtn);
          historicalForm.style.display = "none";
          loadingState.style.display = "none";
      });

      // Handle Load Route button click
      loadDataBtn.addEventListener("click", function () {
          const startDate = document.getElementById("start-date").value;
          const startTime = document.getElementById("start-time").value;
          const endDate = document.getElementById("end-date").value;
          const endTime = document.getElementById("end-time").value;

          if (!startDate || !startTime || !endDate || !endTime) {
              alert("Please fill all fields before proceeding.");
              return;
          }

          // Update selected interval text
          selectedInterval.innerHTML = `<strong>${startDate} ${startTime}</strong> - <strong>${endDate} ${endTime}</strong>`;

          // Show loading state and hide form
          historicalForm.style.display = "none";
          loadingState.style.display = "block";
      });

      // Handle Back button click
      backToHistoricalBtn.addEventListener("click", function () {
          loadingState.style.display = "none";
          historicalForm.style.display = "block";
      });
    });
  </script>
</body>
</html>
